#!/bin/sh


GENERAL=1
GENERAL_VERBOSE=2
CODECS=4
CODECS_VERBOSE=8
FILESYSTEM=16
FILESYSTEM_VERBOSE=32
VMCS=64
VMCS_VERBOSE=128
DISPMAN2=256
DISPMAN2_VERBOSE=512
GCERe=256
GCE_VERBOSE=512
CAMPLUS=1024
CAMPLUS_VERBOSE=2048
APPS=4096
APPS_VERBOSE=8192
CLOCKMAN_POWERMAN=16384
CLOCKMAN_POWERMAN_VERBOSE=32768
VCOS=65536
VCOS_VERBOSE=131072
IMAGE_POOL=262144
IMAGE_POOL_VERBOSE=524288
HDMI=1048576
HDMI_VERBOSE=2097152
MINIMAL=4194304
MINIMAL_VERBOSE=8388608
TUNER=16777216
TUNER_VERBOSE=33554432
VCHI=67108864
VCHI_VERBOSE=134217728
FOCUS=268435456
HANDLERS=536870912
VOWIFI=268435456
VOWIFI_VERBOSE=536870912
USER=1073741824
USER_VERBOSE=2147483648

ALL=4294967295


#level=$(($GENERAL|$GENERAL_VERBOSE|))
level=$(($ALL^$GENERAL_VERBOSE^USER_VERBOSE^$HDMI^$HDMI_VERBOSE))

echo "setting level flags: ${level}"
/opt/vc/bin/vcgencmd set_logging level=$level

/opt/vc/bin/vcdbg log msg -f

